<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jesus.practicaandroid.SegundaPantalla">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPrinci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/lstOpc"
            android:layout_width="match_parent"
            android:layout_height="323dp" />

        <Button
            android:id="@+id/btnAcep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPrinci"
            android:layout_centerHorizontal="true"
            android:onClick="pulsaBoton"
            android:text="@string/btnAcep"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="203dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
