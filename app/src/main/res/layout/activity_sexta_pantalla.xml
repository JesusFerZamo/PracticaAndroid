                <RadioButton
                    android:id="@+id/rb3_2p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rb3_2p" />

                <RadioButton
                    android:id="@+id/rb3_3p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rb3_3p" />

                <RadioButton
                    android:id="@+id/rb3_4p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rb3_4p" />
            </RadioGroup>

            <Button
                android:id="@+id/btnAcep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:onClick="pulsaAcep"
                android:text="@string/btnAcep" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
