            <TextView
                android:id="@+id/lblPreg1p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="@string/lblPreg1p" />

            <RadioGroup
                android:id="@+id/rd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <RadioButton
                    android:id="@+id/rb1_1p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rb1_1p" />

                <RadioButton
                    android:id="@+id/rb1_2p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rb1_2p" />

                <RadioButton
                    android:id="@+id/rb1_3p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rb1_3p" />

                <RadioButton
                    android:id="@+id/rb1_4pÃ§"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rb1_4p" />

            </RadioGroup>

            <TextView
                android:id="@+id/lblPreg2p"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:text="@string/lblPreg2p" />

            <CheckBox
                android:id="@+id/ch1p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/ch1p" />

            <CheckBox
                android:id="@+id/ch2p"
                android:layout_width="match_parent"
