            <CheckBox
                android:id="@+id/ch4p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/ch4p" />

            <TextView
                android:id="@+id/lblPreg3p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="@string/lblPreg3p" />

            <RadioGroup
                android:id="@+id/rd3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp">

                <RadioButton
                    android:id="@+id/rb2_1p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rb2_1p" />

                <RadioButton
                    android:id="@+id/rb2_2p"
                    android:layout_width="wrap_content"
